{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "performance": {
                "noAccumulatingSpread": "off"
            },
            "suspicious": {
                "noExplicitAny": "warn"
            },
            "complexity": {
                "noStaticOnlyClass": "off"
            },
            "style": {
                "noParameterAssign": "warn",
                "useConst": "off"
            }
        }
    },
    "formatter": {
        "lineEnding": "lf",
        "indentStyle": "tab",
        "indentWidth": 4
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "semicolons": "asNeeded"
        },
        "parser": {
            "unsafeParameterDecoratorsEnabled": true
        }
    },
    "json": {
        "formatter": {
            "indentWidth": 4
        }
    }
}
